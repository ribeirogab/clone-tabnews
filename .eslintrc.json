{
  "extends": [
    "@rocketseat/eslint-config/next",
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": true,
        "endOfLine": "auto"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "class",
          "return",
          "continue",
          "break",
          "throw",
          "multiline-expression",
          "block-like",
          "function",
          "iife",
          "export"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "multiline-expression",
          "block-like",
          "function",
          "iife",
          "class",
          "export"
        ],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": [
          "import"
        ],
        "next": [
          "import"
        ]
      },
      {
        "blankLine": "any",
        "prev": [
          "export"
        ],
        "next": [
          "export"
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "warnOnUnassignedImports": true,
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc"
        },
        "groups": [
          "builtin",
          "external",
          ["internal", "parent", "sibling", "index"]
        ]
      }
    ]
  }
}